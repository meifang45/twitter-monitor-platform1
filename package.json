{
  "name": "twitter-monitoring-platform",
  "version": "1.0.0",
  "description": "Personal Twitter Monitoring Platform - A clean, focused dashboard for monitoring specific Twitter accounts",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "build": "cd apps/web && npm run build",
    "start": "cd apps/web && npm run start",
    "lint": "cd apps/web && npm run lint",
    "lint:fix": "cd apps/web && npm run lint -- --fix",
    "type-check": "cd apps/web && npm run type-check",
    "clean": "rm -rf apps/web/.next apps/web/out node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules apps/*/node_modules",
    "reinstall": "npm run clean:all && npm install"
  },
  "keywords": [
    "twitter",
    "monitoring",
    "dashboard",
    "nextjs",
    "vercel"
  ],
  "author": "Developer",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}